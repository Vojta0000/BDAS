<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.Node?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="upce.javafx.AppViewController" prefHeight="600.0" prefWidth="1000.0">

    <!-- LOGIN LAYER -->
    <VBox fx:id="loginPane" spacing="12" maxWidth="360" style="-fx-background-color: white; -fx-padding: 24; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0.2, 0, 4)">
        <StackPane.margin>
            <Insets top="40"/>
        </StackPane.margin>

        <Label text="BankIS Login" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

        <TextField fx:id="nameField" promptText="First name"/>
        <TextField fx:id="surnameField" promptText="Surname"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>

        <Button fx:id="loginButton" text="Login" onAction="#onLogin"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-padding: 8 12; -fx-background-radius: 4;"/>

        <Button fx:id="requestAccountButton" text="Request an account" onAction="#onRequestAccount"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 12; -fx-background-radius: 4;"/>

        <Label fx:id="loginErrorLabel" textFill="#e74c3c" visible="false" managed="false"/>
    </VBox>

    <!-- CLIENT VIEW LAYER -->
    <fx:include fx:id="clientView" source="client-view.fxml" visible="false" managed="false"/>

    <!-- TELLER VIEW LAYER -->
    <fx:include fx:id="tellerView" source="teller-view.fxml" visible="false" managed="false"/>

    <!-- ADMIN VIEW LAYER -->
    <fx:include fx:id="adminView" source="admin-view.fxml" visible="false" managed="false"/>

</StackPane>
