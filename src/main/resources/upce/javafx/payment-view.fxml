<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: white;" 
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="upce.javafx.PaymentViewController">

    <Label text="New Payment" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </Label>

    <GridPane vgap="10" hgap="10">
        <Label text="From Account:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="fromAccountField" GridPane.columnIndex="1" GridPane.rowIndex="0" editable="false" style="-fx-background-color: #ecf0f1;"/>

        <Label text="To Account:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
        <TextField fx:id="toAccountField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Account Number"/>

        <Label text="Amount (CZK):" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="0.00"/>
        
        <Label text="Message for Recipient:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;" GridPane.valignment="TOP"/>
        <TextArea fx:id="messageToField" GridPane.columnIndex="1" GridPane.rowIndex="3" prefRowCount="2" wrapText="true"/>

        <Label text="Message for Sender:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;" GridPane.valignment="TOP"/>
        <TextArea fx:id="messageFromField" GridPane.columnIndex="1" GridPane.rowIndex="4" prefRowCount="2" wrapText="true"/>

        <columnConstraints>
            <ColumnConstraints minWidth="140" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
    </GridPane>

    <!-- Error Label -->
    <Label fx:id="errorLabel" textFill="#e74c3c" visible="false" managed="false" wrapText="true"/>

    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="cancelButton" text="Cancel" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 20;"/>
        <Button fx:id="confirmButton" text="Send Payment" defaultButton="true"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-padding: 8 20; -fx-font-weight: bold;"/>
    </HBox>

</VBox>